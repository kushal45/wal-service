# Application Configuration
NODE_ENV=development
PORT=3000
API_TIMEOUT=30000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=password
DATABASE_NAME=wal_service
DATABASE_SSL=false
DATABASE_LOGGING=true
DATABASE_MAX_CONNECTIONS=10
DATABASE_MIN_CONNECTIONS=2

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=wal-service
KAFKA_GROUP_ID=wal-service-consumer-group
KAFKA_SSL=false
KAFKA_CONNECTION_TIMEOUT=3000
KAFKA_REQUEST_TIMEOUT=30000
# Optional SASL authentication
# KAFKA_SASL_USERNAME=your-username
# KAFKA_SASL_PASSWORD=your-password

# AWS SQS Configuration
AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# SQS_ENDPOINT=http://localhost:4566  # For LocalStack
SQS_QUEUE_URL_PREFIX=https://sqs.us-east-1.amazonaws.com/123456789012/
SQS_MAX_RECEIVE_COUNT=3
SQS_VISIBILITY_TIMEOUT=30
SQS_MESSAGE_RETENTION_PERIOD=1209600

# Security Configuration
VALID_API_KEYS=default-api-key,test-api-key-1,test-api-key-2
JWT_SECRET=super-secret-jwt-key
HASH_SALT=super-secret-salt

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
PROMETHEUS_PORT=9090

# WAL Service Specific
WAL_DEFAULT_BACKEND=kafka
WAL_MAX_MESSAGE_SIZE=1048576
WAL_DEFAULT_DELAY_SECONDS=0
WAL_MAX_DELAY_SECONDS=86400
WAL_RETRY_ATTEMPTS=3
WAL_RETRY_BACKOFF_MS=1000
WAL_TRANSACTION_TIMEOUT_MS=300000

# Logging
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_PATH=logs/wal-service.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d